//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::BaseIterator::Next()
//////////////////////////////////////////////////////////////////////////////////////////

inline void NodeList::BaseIterator::Next()
{
	RAD_ASSERT(m_node);
	m_ofs++;
	m_node = m_node->Next();
}

//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::BaseIterator::Prev()
//////////////////////////////////////////////////////////////////////////////////////////

inline void NodeList::BaseIterator::Prev()
{
	RAD_ASSERT(m_node);
	m_ofs--;
	m_node = m_node->Prev();
}

