//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::NodeList()
//////////////////////////////////////////////////////////////////////////////////////////

inline NodeList::NodeList()
{
#if defined(RAD_OPT_DEBUG)
	m_id = MAGIC_ID;
#endif

	m_size = 0;
	m_head = m_tail = 0;
}

//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::~NodeList()
//////////////////////////////////////////////////////////////////////////////////////////

inline NodeList::~NodeList()
{
#if defined(RAD_OPT_DEBUG)
	AssertValid();
	RAD_ASSERT_MSG(m_head == 0 && m_tail == 0, "Attempting to destruct an active list!");
#endif
}

//////////////////////////////////////////////////////////////////////////////////////////

//
// Insertion/Removal functions.
//

//////////////////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::InsertFirst()
//////////////////////////////////////////////////////////////////////////////////////////

inline void NodeList::InsertFirst(Node* node)
{
	InsertBefore(m_head, node);
	RAD_ASSERT(m_head == node);
}

//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::InsertLast()
//////////////////////////////////////////////////////////////////////////////////////////

inline void NodeList::InsertLast(Node* node)
{
	InsertAfter(m_tail, node);
	RAD_ASSERT(m_tail == node);
}


//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::RemoveFirst()
//////////////////////////////////////////////////////////////////////////////////////////

inline NodeList::Node* NodeList::RemoveFirst()
{
	Node* n = First();

	RAD_ASSERT(n);

	Remove(n);

	return n;
}


//////////////////////////////////////////////////////////////////////////////////////////
// containter::NodeList::RemoveLast()
//////////////////////////////////////////////////////////////////////////////////////////

inline NodeList::Node* NodeList::RemoveLast()
{
	Node* n = Last();

	RAD_ASSERT(n);

	Remove(n);

	return n;
}



