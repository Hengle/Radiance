// containter::NodeList::BaseIterator::Value() const
//////////////////////////////////////////////////////////////////////////////////////////

inline NodeList::Node* const& NodeList::BaseIterator::Value() const
{
	RAD_ASSERT(m_node);
	return m_node;
}

